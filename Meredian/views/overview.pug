extends base

block content 
  main.main
    .card-container

      each tour in tours
        .card
          .card__header
            .card__picture
              .card__picture-overlay &nbsp;
              img.card__picture-img(src=`/img/tours/${tour.imageCover}`, alt=`${tour.name}`)
            h3.heading-tertirary
              span= tour.name

          .card__details
            h4.card__sub-heading= `Складність ${tour.difficulty} Тривалість ${tour.duration} доби`
            p.card__text= tour.summary
            .card__data
              svg.card__icon
                use(xlink:href='img/icons.svg#icon-map-pin')
              span= tour.startLocation.description
            .card__data
              svg.card__icon
                use(xlink:href='img/icons.svg#icon-calendar')
              span= tour.startDates[0].toLocaleString('uk-UA', {month:'long', year:'numeric'})
            .card__data
              svg.card__icon
                use(xlink:href='img/icons.svg#icon-flag')
              span= `${tour.locations.length} зупинок`
            .card__data
              svg.card__icon
                use(xlink:href='img/icons.svg#icon-user')
              span= `${tour.maxGroupSize} людей`

          .card__footer
            p
              span.card__footer-value= `$${tour.price}`
              | 
              span.card__footer-text за кожну людину
            p.card__ratings
              span.card__footer-value= `${tour.ratingAverage}`
              | 
              span.card__footer-text= `рейтинг (${tour.ratingQuantity})`
            a.btn.btn--green.btn--small(href=`/tour/${tour.slug}`) Деталі